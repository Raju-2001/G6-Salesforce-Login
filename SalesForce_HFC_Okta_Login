public class HFCOkataLogin {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		WebDriver driver = new ChromeDriver();
		driver.get("https://gohfc.okta.com/login/login.htm?fromURI=%2Fapp%2FUserHome");
		driver.manage().window().maximize();
		driver.findElement(By.id("okta-signin-username")).sendKeys("Narasimha.Daggupati@gohfc.com");
		driver.findElement(By.id("okta-signin-password")).sendKeys("TestJune#2025");
		driver.findElement(By.id("okta-signin-submit")).click();
		
		//driver.findElement(By.id("input67")).click();
		
		try {
			Thread.sleep(20000);
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		WebDriverWait wait1 = new WebDriverWait(driver, Duration.ofSeconds(10));
		WebElement myElement1 = wait1.until(ExpectedConditions.elementToBeClickable(By.xpath(("//input[@type='submit']"))));
				
		myElement1.click();
		
		  // WebElement verifyButton= driver.findElement(By.xpath("//input[@type='submit']"));
	      // verifyButton.click();
		
		WebDriverWait wait2 = new WebDriverWait(driver, Duration.ofSeconds(10));
		WebElement myElement2 = wait2.until(ExpectedConditions.elementToBeClickable(By.xpath("//a[@aria-label='launch app Salesforce - UAT']")));
		
		myElement2.click();
		System.out.println("The Okta Salesforce UAT is Logged in Successfully");
		
		// Confirmation Alert
